}

.mintitle {
    margin-top: 18rpx;
    color: #666;
    display: flex;
    align-items: center;
}

.mintitle text:first-child {
    display: inline-block;
    padding: 0rpx 10rpx;
    height: 34rpx;
    line-height: 34rpx;
    font-size: 22rpx;
    border: 1rpx solid #f33030;
    border-radius: 8rpx;
    color: #f33030;
    margin-right: 12rpx;
}

.mintitle text:nth-child(2) {
    display: inline-block;
    padding: 0rpx 10rpx;
    height: 34rpx;
    line-height: 34rpx;
    font-size: 22rpx;
    border: 1rpx solid #f33030;
    border-radius: 8rpx;
    color: #f33030;
    margin-right: 12rpx;
}

.oldtitle text:first-child {
    border: 1rpx solid #555;
    color: #fff;
    background: #555;
}

.lis {
    width: 460rpx;
    display: flex;
    justify-content: space-between;
    position: absolute;
    bottom: 32rpx;
}

.price {
    display: flex;
    color: #666;
    align-items: center;
}

.curPrice {
    font-size: 32rpx;
    color: #f33030;
    font-weight: 700;
}

.old-price {
    color: #666;
}

.oldPrice text {
    display: inline-block;
    font-size: 24rpx;
    position: relative;
    color: #999;
    margin-left: 10rpx;
}

.oldPrice text::before {
    content: " ";
    display: inline-block;
    width: 100%;
    height: 2rpx;
    background: #999;
    position: absolute;
    top: 10rpx;
    left: 0rpx;
    transform: rotate(2deg);
}

.join {
    width: 182rpx;
    height: 70rpx;
    background-image: -webkit-linear-gradient(0deg,rgb(232,90,90)0%,rgb(243,48,48)100%);
    line-height: 70rpx;
    text-align: center;
    color: #fff;
    border-radius: 6rpx;
}

.oldJoin {
    background-image: none;
    color: #666;
    border: 1rpx solid #222;
}

.index {
    width: 96rpx;
    height: 96rpx;
    border-radius: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
    position: fixed;
    /*bottom: 200rpx;*/
    right: 50rpx;
    z-index: 999;
    box-shadow: 0px 0px 18px 0px rgba(4,0,0,0.2);
    background: rgba(255,255,255,0.9);
}

.indexHome {
    width: 68rpx;
    height: 68rpx;
    border-radius: 50%;
}
