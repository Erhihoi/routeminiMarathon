/* mzhk_sun/pages/index/sport/sportset.wxss */
view {
    font-size: 16px;
}

.television {
    width: 100%;
    background: rgb(90, 216, 255);
}
.mergeye {
    display: flex;
}
.lpart {
    width: 375rpx;
    /* box-shadow: inset -5px -5px 5px grey; */
    padding-right: 0;
    box-sizing: border-box;
    padding-bottom: 0;
}
.rpart {
    width: 375rpx;
    padding-left: 0;
    padding-bottom: 0;
    box-sizing: border-box;
}
.spart {
    background-color: aquamarine;
    height: 375rpx;
    width: 375rpx;
    padding: 30rpx;
    box-sizing: border-box;
}

.second-screen {
    height: 375rpx;
    background: coral;
}

.race-middle {
    margin-top: 86rpx;
    text-align: center;
}

.race {
    background: #F44336;
    height: 100%;
    width: 100%;
    border-radius: 86px;
    border: 10px solid yellow;
    box-sizing: border-box;
}

.ppart {
    background: #ffb100;
    height: 375rpx;
    text-overflow: clip;
    padding-top: 20rpx;
    box-sizing: border-box;
    word-break: break-word;
    overflow: scroll;
}
.fpart {
    background: #ffb100;
    height: 375rpx;
    text-overflow: clip;
    padding-top: 20rpx;
    box-sizing: border-box;
    word-break: break-word;
    overflow: scroll;
}


.title {
    width: 83rpx;
    height: 83rpx;
    background: #ffb100;
    float: left;
    border: 1px solid;
    border-color: #F44336;
    box-sizing: border-box;
    border-radius: 50%;
    margin-left: 28.5rpx;
    margin-bottom: 12.5rpx;
    text-align: center;
    vertical-align: middle;
    line-height: 83rpx;
}

/* 列表按比例拼接成100% */
.detail {
}

.info {
    /* border-bottom: 1px solid rgb(233, 47, 149); */
    height: 500rpx;
    box-sizing: border-box;
    padding: 20rpx;
    padding-top: 0;
    box-sizing: content-box;
    /* background: rgb(255, 90, 90); */
}

.ibox {
    background: #fff;
    height: 100%;
}

.message {
    box-sizing: border-box;
    height: 50%;
    width: 50%;
    float: left;
    position: relative;
}

.message:nth-child(2n) {
    border-left: 1px solid #888;
}

.message:nth-child(n+3) {
    border-top: 1px solid #888;
}

.message:nth-child(4) {
    position: relative;
    width: 354rpx;
}

/* bottom */
.tech {
    text-align: center;
    font-size: 14px;
    margin-top: 10rpx;
}
.canvas-contain{
    width: 100%;
    background: blue;
    position: relative;
    box-sizing: border-box;
    text-align: center;
    color: #fff;
    /* border: 32px solid; */
}
.circle-box {
    text-align: center;
}

.circle {
    position: absolute;
    left: 0;
    right: 0;
    margin: auto;
    /* z-index: 55; */
}

.draw_btn {
    width: 28vw;
    position: absolute;
    top: 31vw;
    right: 0;
    left: 0;
    margin: auto;
    border: 1px #0D0D0D solid;
    background-color: #BFEFFF;
    border-radius: 5vw;
    text-align: center;
}