<view class="television">
    <view class="mergeye">
        <view class="lpart">
            <view class="fpart">
                <block wx:for="{{section}}">
                    <view class="title" style="background:red;" bindtap="section" data-num='{{item}}'>{{item}}</view>
                </block>
            </view>        
            <view class="spart">
                <view class="race">
                    <view class="race-middle">{{tips}} </view>
                </view>
            </view>        
        </view>
        <view class="rpart">
            <view class="second-screen">
                显示地图定位
            </view>
            <view class="ppart">
                <block wx:for="{{section}}">
                    <view class="title" style="background:red;" bindtap="section" data-num='{{item}}'>{{item}}</view>
                </block>
            </view>
        </view>
    </view>
</view>

